from itertools import combinations

def letter_list():
    t =[chr(i) for i in range(97,123)]
    return t

def avoid_5(word,forbidden_5):
    """若word中不包含5个字符返回true"""
    i =0
    while i<5:
        if forbidden_5[i] in word:
            return False
        i+=1
    return True
    

def num_forbidden5(forbidden_5):
    """返回不包含5个字符的单词数量"""
    x = 0
    fin=open("D:\\files\\words_list.txt") 
    for line in fin:
        word = line.strip()
        if avoid_5(word,forbidden_5):
            x+=1
    return x

def max_num():
    a=0
    t=[]
    letter_26=letter_list()
    for p in combinations(letter_26,5):
        b =num_forbidden5(p)
        if b>a :
            a=b
            t=p
    return  a,t

