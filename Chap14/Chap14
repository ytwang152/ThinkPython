#%%14.1
import os
def sed(oldstr,newstr,oldfile,newfile):
    """用新str替换特定str,并存储到新文件中"""
    fin1=open(oldfile,"r")
    fin2=open(newfile,"c")
    for line in fin1:
        new_str=line.replace(oldstr,newstr)
        fin2.write(new_str)
    fin1.close()
    fin2.close()
    
